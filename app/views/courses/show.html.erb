<br />

<div class="booyah-box col-10 offset-1">
  
  <h1> <%= @course.title %> </h1>
  <br />
    <div class="row">
        <div class="col-8">
           <%= @course.description %>
        </div>
        
        <div class="col-4 text-center">
            <span class="badge badge-default">
               <%= number_to_currency @course.cost %>
            </span>
            
            <% if current_user && current_user == @course.user %>
                <br />
                <br />
                <%= link_to 'Admin Panel', instructor_course_path(@course), class: 'btn btn-danger btn-laarge' %>
            <% end %>
            
        </div>
        
    
    <div class="col-12">
        <% @course.sections.each do |section| %>
          <div class="section">
            <%= section.title %>
            <% section.lessons.each do |lesson| %>
                <div class="lesson">
                    <b><%= lesson.title %></b>
                    -
                    <%= lesson.subtitle %>
                    
                </div>
            <% end %>
          </div>
        <% end %>
    </div>    
    
    </div>
  
</div>